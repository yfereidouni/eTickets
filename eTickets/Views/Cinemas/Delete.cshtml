@model Cinema

@{
    ViewData["Title"] = "Delete cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form class="" asp-controller="Cinemas" asp-action="Delete" method="post">

                    <div class="form-group text-center">
                        <img class="img-thumbnail rounded-circle" id="ProfilePicturePreview" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Logo" class="control-lable"></label>
                        <input asp-for="Logo" class="form-control" readonly />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-lable"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-lable"></label>
                        <input asp-for="Description" class="form-control" readonly />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<input type="submit" value="Confirm Delete" class="Ubi bi-webcam btn btn-danger float-end mt-2" />*@
                        <button type="submit" class="Ubi bi-webcam btn btn-danger float-end mt-2"><i class="bi bi-trash"></i> Confirm Delete</button>
                        <a class="btn btn-outline-secondary mt-2" asp-controller="Cinemas" asp-action="Index">Show All</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}


